<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Files - File Storage System</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 70px;
            background: #0056B3;
            color: white;
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 20px;
        }

        .nav-item {
            margin: 20px 0;
            position: relative;
        }

        .nav-link {
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            text-decoration: none;
            font-size: 24px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        .nav-link.active {
            background: rgba(255, 255, 255, 0.3);
        }

        .nav-link i {
            text-align: center;
        }

        .nav-tooltip {
            position: absolute;
            left: 70px;
            top: 50%;
            transform: translateY(-50%);
            background: #333;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            white-space: nowrap;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
            font-size: 14px;
        }

        .nav-link:hover .nav-tooltip {
            opacity: 1;
            visibility: visible;
        }

        /* Main Content Area */
        .main-content {
            flex: 1;
            margin-left: 70px;
            padding: 20px;
            background: #f5f5f5;
        }

        .content-header {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }

        .content-header h1 {
            color: #333;
            font-size: 24px;
        }

        .tab-container {
            display: flex;
            margin-bottom: 20px;
            gap: 10px; /* Add consistent gap between tabs */
        }

        .tab {
            padding: 10px 20px;
            cursor: pointer;
            border: 1px solid #ddd;
            border-bottom: none;
            background: #f5f5f5;
            color: #333;
            font-weight: bold;
            border-radius: 5px 5px 0 0;
        }

        .tab.active {
            background: white;
            border-color: #ddd;
            border-bottom-color: white;
        }

        .tab-content {
            display: none;
            background: white;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 0 0 5px 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .tab-content.active {
            display: block;
        }

        .file-list {
            width: 100%;
            border-collapse: collapse;
            border-spacing: 0;
            margin-bottom: 20px;
            table-layout: fixed;
            font-size: 14px;
        }

        .file-list th,
        .file-list td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            white-space: nowrap;
            vertical-align: middle;
        }

        .file-list tr {
            height: 45px; /* Set a fixed height for rows */
        }

        .file-actions {
            display: flex;
            align-items: center;
            min-height: 25px;
        }

        .action-btn {
            height: 100%;
            padding: 5px 10px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            color: #000;
        }

        .action-btn i {
            margin-right: 8px; 
        }

        .download-btn {
            margin-left: -10px; 
        }

        .delete-btn {
            margin-left:  10px; 
        }

        .edit-btn {
            margin-left:  76px; 
        }
        
        .logout-popup {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            text-align: center;
            z-index: 1000;
            width: 300px;
        }

        .logout-popup-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
            z-index: 999;
        }

        .logout-popup-buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }

        .logout-popup-btn {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .logout-popup-cancel {
            background-color: #f5f5f5;
            color: #333;
        }

        .logout-popup-confirm {
            background-color: #0056B3;
            color: white;
        }
        
        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-btn {
            padding: 10px 20px;
            background: #0056B3;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: 175px;
            border-radius: 5px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

        .dropdown-content a {
            color: #333;
            padding: 12px 16px;
            border-radius: 5px;
            text-decoration: none;
            display: block;
        }

        .dropdown-content a:hover {
            background-color: #ddd;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }
        .relative {
            position: relative;
        }

        .clean-select {
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            border: none;
            background-color: transparent;
            padding-right: 70px;
            background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='4' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right center;
            background-size: 12px;
            cursor: pointer;
        }

        .clean-select:focus {
            outline: none;
        }
    </style>
</head>
<body>
    <!-- Sidebar Navigation -->
    <nav class="sidebar">
        <div class="nav-item">
            <a href="/api/file/homepage" class="nav-link">
                <i class="fas fa-home"></i>
                <span class="nav-tooltip">Home</span>
            </a>
        </div>
        <div class="nav-item">
            <a href="/api/file/file" class="nav-link active">
                <i class="fas fa-file"></i>
                <span class="nav-tooltip">Files</span>
            </a>
        </div>
        <div class="nav-item">
            <a href="/api/file/update" class="nav-link">
                <i class="fas fa-sync"></i>
                <span class="nav-tooltip">Update</span>
            </a>
        </div>
        <div class="nav-item">
            <a href="/api/auth/login" class="nav-link">
                <i class="fas fa-sign-out"></i>
                <span class="nav-tooltip">Logout</span>
            </a>
        </div>
    </nav>

    <!-- Main Content Area -->
    <main class="main-content">
        <div class="content-header">
            <h1>Dashboard</h1>
        </div>

        <!-- Tab Container with Search Bar -->
        <div class="tab-container" style="display: flex; justify-content: space-between; align-items: center;">
            <!-- Tabs -->
            <div style="display: flex; align-items: center; gap: 10px;">
                <div class="tab active" data-tab="software">Software</div>
                <div class="tab" data-tab="hardware">Hardware</div>
                <div class="tab" data-tab="upload">Upload</div>
            </div>

            <!-- Search Bar -->
            <div style="display: flex; align-items: center; gap: 10px;">
                <i class="fas fa-search" style="color: #555; font-size: 18px;"></i>
                <input
                    type="text"
                    id="searchInput"
                    placeholder="Search for file..."
                    style="
                        padding: 8px;
                        font-size: 14px;
                        border: 1px solid #ddd;
                        border-radius: 5px;
                        width: 250px;
                    "
                />
            </div>
        </div>

        <!-- Software Section -->
        <div id="software" class="tab-content active">
            <table class="file-list" id="softwareTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Size</th>
                        <th>Date Modified</th>
                        <th>Location</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% softwarefiles.forEach(function(file) { %>
                        <tr>
                            <td>
                                <i class="fas fa-file file-icon"></i>
                                <%= file.filename %>
                            </td>
                            <td><%= formatFileSize(file.size) %></td>
                            <td><%= formatDate(file.lastModified) %></td>
                            <td>
                                <select 
                                    onchange="updateLocation('<%= file._id %>', this.value)" 
                                    class="clean-select"
                                >
                                    <option value="HQ" <%= file.location === 'HQ' ? 'selected' : '' %>>HQ</option>
                                    <option value="Section 6" <%= file.location === 'Section 6' ? 'selected' : '' %>>Section 6</option>
                                    <option value="Section 6B" <%= file.location === 'Section 6B' ? 'selected' : '' %>>Section 6B</option>
                                    <option value="Section 7" <%= file.location === 'Section 7' ? 'selected' : '' %>>Section 7</option>
                                </select>
                            </td>
                            <td class="file-actions">
                                <a href="/file/download/<%= file._id %>" class="action-btn download-btn">
                                    <i class="fas fa-download"></i> Download
                                </a>
                                <button onclick="editFile('<%= file._id %>')" class="action-btn edit-btn">
                                    <i class="fas fa-pencil"></i> Edit
                                </button>
                                <button onclick="deleteFile('<%= file._id %>')" class="action-btn delete-btn">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Hardware Section -->
        <div id="hardware" class="tab-content">
            <table class="file-list" id="hardwareTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Size</th>
                        <th>Date Modified</th>
                        <th>Location</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% hardwarefiles.forEach(function(file) { %>
                        <tr>
                            <td>
                                <i class="fas fa-file file-icon"></i>
                                <%= file.filename %>
                            </td>
                            <td><%= formatFileSize(file.size) %></td>
                            <td><%= formatDate(file.lastModified) %></td>
                            <td>
                                <select 
                                    onchange="updateLocation('<%= file._id %>', this.value)" 
                                    class="clean-select"
                                >
                                    <option value="HQ" <%= file.location === 'HQ' ? 'selected' : '' %>>HQ</option>
                                    <option value="Section 6" <%= file.location === 'Section 6' ? 'selected' : '' %>>Section 6</option>
                                    <option value="Section 6B" <%= file.location === 'Section 6B' ? 'selected' : '' %>>Section 6B</option>
                                    <option value="Section 7" <%= file.location === 'Section 7' ? 'selected' : '' %>>Section 7</option>
                                </select>
                            </td>
                            <td class="file-actions">
                                <a href="/file/download/<%= file._id %>" class="action-btn download-btn">
                                    <i class="fas fa-download"></i> Download
                                </a>
                                <button onclick="editFile('<%= file._id %>')" class="action-btn edit-btn">
                                    <i class="fas fa-pencil"></i> Edit
                                </button>
                                <button onclick="deleteFile('<%= file._id %>')" class="action-btn delete-btn">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Upload Section -->
        <div id="upload" class="tab-content">
            <div style="display: flex; flex-direction: column; align-items: center; gap: 20px; padding: 20px; background: white; border-radius: 10px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
                <h2>Upload Your Files</h2>
                <div
                    style="
                        width: 100%;
                        max-width: 600px;
                        height: 200px;
                        border: 2px dashed #ccc;
                        border-radius: 10px;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        color: #555;
                        font-size: 16px;
                        cursor: pointer;
                    "
                    id="dropZone"
                >
                    Drag and drop files here or click to browse
                </div>
                <input type="file" id="fileUpload" multiple style="display: none;" />
                <div class="dropdown">
                    <button class="dropdown-btn">
                        Upload Files <i class="fas fa-caret-down"></i>
                    </button>
                    <div class="dropdown-content">
                        <a href="#" onclick="uploadFiles('software')">Upload to Software</a>
                        <a href="#" onclick="uploadFiles('hardware')">Upload to Hardware</a>
                    </div>
                </div>
            </div>
        </div>

        <script>
            // Tab switching logic
            const tabs = document.querySelectorAll('.tab');
            const contents = document.querySelectorAll('.tab-content');

            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    // Remove active class from all tabs and contents
                    tabs.forEach(t => t.classList.remove('active'));
                    contents.forEach(c => c.classList.remove('active'));

                    // Add active class to the selected tab and corresponding content
                    tab.classList.add('active');
                    document.getElementById(tab.dataset.tab)?.classList.add('active');
                });
            });

            // Drag and Drop Logic
            const dropZone = document.getElementById('dropZone');
            const fileUpload = document.getElementById('fileUpload');

            dropZone.addEventListener('click', () => fileUpload.click());

            dropZone.addEventListener('dragover', (event) => {
                event.preventDefault();
                dropZone.style.borderColor = '#0056B3';
            });

            dropZone.addEventListener('dragleave', () => {
                dropZone.style.borderColor = '#ccc';
            });

            dropZone.addEventListener('drop', (event) => {
                event.preventDefault();
                dropZone.style.borderColor = '#ccc';
                const files = event.dataTransfer.files;
                handleFiles(files);
            });

            fileUpload.addEventListener('change', (event) => {
                const files = event.target.files;
                handleFiles(files);
            });

            async function handleFiles(files) {
    if (files.length) {
        try {
            const formData = new FormData();
            
            // Append each file to FormData
            for (let i = 0; i < files.length; i++) {
                formData.append('file', files[i]);
            }
            
            // Store the FormData for later use
            window.uploadFormData = formData;
            
            alert(`${files.length} file(s) selected and ready for upload.`);
        } catch (error) {
            console.error('Error preparing files:', error);
            alert('Error preparing files for upload.');
        }
    }
}

async function uploadFiles(destination) {
    if (!window.uploadFormData) {
        alert('Please select files first.');
        return;
    }

    const endpoint = destination === 'software' 
        ? '/api/file/software' 
        : '/api/file/hardware';

    try {
        const response = await fetch(endpoint, {
            method: 'POST',
            body: window.uploadFormData,
        });

        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }

        const result = await response.json();
        alert(`Files uploaded to ${destination} successfully!`);
        
        // Clear the stored FormData after successful upload
        window.uploadFormData = null;

    } catch (error) {
        console.error('Error uploading files:', error);
        alert(`Error uploading files to ${destination}: ${error.message}`);
    }
}

            // Dropdown functionality
            document.querySelectorAll('.dropdown').forEach(function(dropdownWrapper) {
                const dropdownBtn = dropdownWrapper.querySelector('.dropdown-btn');
                const dropdownContent = dropdownWrapper.querySelector('.dropdown-content');

                dropdownBtn.addEventListener('click', function() {
                    dropdownWrapper.classList.toggle('show');
                });

                window.addEventListener('click', function(event) {
                    if (!event.target.matches('.dropdown-btn')) {
                        dropdownWrapper.classList.remove('show');
                    }
                });
            });
            
            document.querySelector('.nav-item a[href="/api/auth/login"]').addEventListener('click', function(e) {
            e.preventDefault(); // Prevent direct navigation

            // Create popup overlay
            const overlayEl = document.createElement('div');
            overlayEl.classList.add('logout-popup-overlay');

            // Create popup
            const popupEl = document.createElement('div');
            popupEl.classList.add('logout-popup');
            popupEl.innerHTML = `
                <h3>Confirm Logout</h3>
                <p>Are you sure you want to log out?</p>
                <div class="logout-popup-buttons">
                    <button class="logout-popup-btn logout-popup-cancel">Cancel</button>
                    <button class="logout-popup-btn logout-popup-confirm">Logout</button>
                </div>
            `;

            // Append to body
            document.body.appendChild(overlayEl);
            document.body.appendChild(popupEl);

            // Cancel button
            popupEl.querySelector('.logout-popup-cancel').addEventListener('click', function() {
                document.body.removeChild(overlayEl);
                document.body.removeChild(popupEl);
            });

            // Confirm logout button
            popupEl.querySelector('.logout-popup-confirm').addEventListener('click', function() {
                // Redirect to login page
                window.location.href = '/api/auth/login';
            });

            // Close popup if overlay is clicked
            overlayEl.addEventListener('click', function() {
                document.body.removeChild(overlayEl);
                document.body.removeChild(popupEl);
            });
        });
        async function updateLocation(fileId, newLocation) {
    try {
        const response = await fetch(`/api/file/location/${fileId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ location: newLocation })
        });

        if (!response.ok) {
            throw new Error('Failed to update location');
        }

        // Optionally refresh the page or show a success message
        // window.location.reload();
    } catch (error) {
        console.error('Error updating location:', error);
        alert('Failed to update location');
    }
}
        </script>
    </main>
</body>
</html>