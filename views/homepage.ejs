<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - File Storage System</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 70px;
            background: #0056B3;
            color: white;
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 20px;
        }

        .nav-item {
            margin: 20px 0;
            position: relative;
        }

        .nav-link {
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            text-decoration: none;
            font-size: 24px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        .nav-link.active {
            background: rgba(255, 255, 255, 0.3);
        }

        .nav-link i {
            text-align: center;
        }

        .nav-tooltip {
            position: absolute;
            left: 70px;
            top: 50%;
            transform: translateY(-50%);
            background: #333;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            white-space: nowrap;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
            font-size: 14px;
        }

        .nav-link:hover .nav-tooltip {
            opacity: 1;
            visibility: visible;
        }

        /* Main Content Area */
        .main-content {
            flex: 1;
            margin-left: 70px;
            padding: 20px;
            background: #f5f5f5;
        }

        .content-header {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }

        .content-header h1 {
            color: #333;
            font-size: 24px;
        }

        .content-body {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        /* Table Styles */
        .file-list {
            width: 100%;
            border-collapse: collapse;
        }

        .file-list th,
        .file-list td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .file-list th {
            background-color: #f8f9fa;
            color: #333;
        }

        .action-btn {
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            background: linear-gradient(45deg, #0056B3, #1E90FF);
            color: white;
        }
        .logout-popup {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            text-align: center;
            z-index: 1000;
            width: 300px;
        }

        .logout-popup-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5);
            z-index: 999;
        }

        .logout-popup-buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }

        .logout-popup-btn {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .logout-popup-cancel {
            background-color: #f5f5f5;
            color: #333;
        }

        .logout-popup-confirm {
            background-color: #0056B3;
            color: white;
        }
    </style>
</head>
<body>
    <!-- Sidebar Navigation -->
    <nav class="sidebar">
        <div class="nav-item">
            <a href="/api/file/homepage" class="nav-link active">
                <i class="fas fa-home"></i>
                <span class="nav-tooltip">Home</span>
            </a>
        </div>
        <div class="nav-item">
            <a href="/api/file/file" class="nav-link">
                <i class="fas fa-file"></i>
                <span class="nav-tooltip">Files</span>
            </a>
        </div>
        <div class="nav-item">
            <a href="/api/file/update" class="nav-link">
                <i class="fas fa-sync"></i>
                <span class="nav-tooltip">Update</span>
            </a>
        </div>
        <div class="nav-item">
            <a href="/api/auth/login" class="nav-link">
                <i class="fas fa-sign-out"></i>
                <span class="nav-tooltip">Logout</span>
            </a>
        </div>
    </nav>

    <!-- Main Content Area -->
    <main class="main-content">
        <div class="content-header">
            <h1>Welcome</h1>
        </div>
        
        <div class="content-body">
            
        </div>
    </main>

    <script>
        // Handle active navigation state
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', function() {
                // Remove active class from all links
                document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
                // Add active class to clicked link
                this.classList.add('active');
            });
        });

        // Function to fetch and display files
        async function fetchFiles() {
            try {
                const response = await fetch('/api/files');
                const files = await response.json();
                updateFileList(files);
            } catch (error) {
                console.error('Error fetching files:', error);
            }
        }

        function updateFileList(files) {
            const tbody = document.getElementById('fileListBody');
            tbody.innerHTML = '';
            
            files.forEach(file => {
                const row = `
                    <tr>
                        <td>${file.id}</td>
                        <td>${file.title}</td>
                        <td>${file.details}</td>
                        <td>${new Date(file.date).toLocaleDateString()}</td>
                        <td>${file.status}</td>
                        <td>
                            <button class="action-btn" onclick="viewFile('${file.id}')">
                                View
                            </button>
                        </td>
                    </tr>
                `;
                tbody.innerHTML += row;
            });
        }

        // Initial load
        fetchFiles();

        document.querySelector('.nav-item a[href="/api/auth/login"]').addEventListener('click', function(e) {
            e.preventDefault(); // Prevent direct navigation

            // Create popup overlay
            const overlayEl = document.createElement('div');
            overlayEl.classList.add('logout-popup-overlay');

            // Create popup
            const popupEl = document.createElement('div');
            popupEl.classList.add('logout-popup');
            popupEl.innerHTML = `
                <h3>Confirm Logout</h3>
                <p>Are you sure you want to log out?</p>
                <div class="logout-popup-buttons">
                    <button class="logout-popup-btn logout-popup-cancel">Cancel</button>
                    <button class="logout-popup-btn logout-popup-confirm">Logout</button>
                </div>
            `;

            // Append to body
            document.body.appendChild(overlayEl);
            document.body.appendChild(popupEl);

            // Cancel button
            popupEl.querySelector('.logout-popup-cancel').addEventListener('click', function() {
                document.body.removeChild(overlayEl);
                document.body.removeChild(popupEl);
            });

            // Confirm logout button
            popupEl.querySelector('.logout-popup-confirm').addEventListener('click', function() {
                // Redirect to login page
                window.location.href = '/api/auth/login';
            });

            // Close popup if overlay is clicked
            overlayEl.addEventListener('click', function() {
                document.body.removeChild(overlayEl);
                document.body.removeChild(popupEl);
            });
        });
    </script>
</body>
</html>
