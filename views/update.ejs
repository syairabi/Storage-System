            display: flex;
            align-items: center;
            gap: 10px;
        }

        .log-card h2 i {
            color: #0056B3;
        }

        .log-list {
            list-style: none;
        }

        .log-item {
            padding: 10px 0;
            border-bottom: 1px solid #eee;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .log-item:last-child {
